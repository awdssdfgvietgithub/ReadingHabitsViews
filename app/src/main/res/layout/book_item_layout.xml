<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="book"
            type="com.vietnguyen.data.models.BookModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/book_item_layout_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book_image_view"
            android:layout_width="80dp"
            android:layout_height="128dp"
            android:contentDescription="@string/imageBook"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_book" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/book_type_boder"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/book_category_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{book.category.categoryName}"
                    android:textAppearance="@style/MobileLabelMediumM"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/book_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{book.name}"
                android:textAppearance="@style/MobileTitleMediumM"
                android:textColor="@color/neutral_11161D" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/book_author_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{book.authorName}"
                android:textAppearance="@style/MobileLabelLarge"
                android:textColor="@color/neutral_6B7280" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/eyeIcon"
                    android:src="@drawable/eye"
                    app:tint="@color/neutral_4B5563" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/book_views_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{book.views}"
                    android:textAppearance="@style/MobileLabelMedium"
                    android:textColor="@color/neutral_374151" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang đọc trang"
                        android:textAppearance="@style/MobileLabelMediumM"
                        android:textColor="@color/neutral_6B7280" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="2dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/linear_progress_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:indicatorColor="#3ECCC0"
                        app:trackColor="#F3F4F6" />

                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/button_read_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/readNow"
                        android:textAppearance="@style/MobileBodyMediumM"
                        android:textColor="@color/neutral_4B5563" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>